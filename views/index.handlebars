<h1>Burgers!</h1>

<div class="formContainer">
  <img class="burger" src="../public/assets/img/burger.png" alt="">
  <h2>Add a burger</h2>
  <form class="create-form">

    <div class="form-group">
      <label for="bu">Burger Name:</label>
      <input type="text" id="bu" name="name">
    </div>

    <button type="submit" id="submit">Add burger</button>
  </form>
</div>

<div class="parentContainer">
  <div class="notDevoured">
    <h2>Burgers that are not devoured!</h2>
    <ul>
      {{#each burgers}}
        {{#unless devoured}}
        <li>
          {{burger_name}}
          <button class="change-burger" data-id="{{id}}">Devour</button>
        </li>
        {{/unless}}
      {{/each}}
    </ul>
  </div>

  <div class="devoured">
    <h2>Burgers that are devoured!</h2>
    <ul>
      {{#each burgers}}
        {{#if devoured}}
          <li>
            {{burger_name}}
          </li>
        {{/if}}
      {{/each}}
    </ul>
  </div>
</div>



