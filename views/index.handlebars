<div class="bodyContainer">
  <h1>BURGERS</h1>

  <div class="formContainer">
    <img class="burger" src="/assets/img/burger.png" alt="">
    
    <div class="formSubContainer">
      <h2>Add a burger</h2>
      <form class="create-form">

        <div class="form-group">
          <label for="bu">Burger Name:</label>
          <input type="text" id="bu" name="name">
          <button type="submit" id="submit">Add</button>
        </div>

        
      </form>
    </div>
  </div>

  <div class="parentContainer">
    <div class="notDevoured">
      <h2>Waitlist:</h2>
      <ul>
        {{#each burgers}}
          {{#unless devoured}}
          <li>
            {{burger_name}}
            <button class="change-burger" data-id="{{id}}">Devour</button>
          </li>
          {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="devoured">
      <h2>Devoured:</h2>
      <ul>
        {{#each burgers}}
          {{#if devoured}}
            <li>
              {{burger_name}}
            </li>
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>



